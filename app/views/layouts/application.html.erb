<!DOCTYPE html>
<html>
<head>
  <title>TestDrivenTwitter</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if flash[:notice] %>
  <% flash[:notice].each do |notice| %>
    <p><%= notice %></p>
  <% end %>
<% end %>

<%= yield %>

</body>
</html>
